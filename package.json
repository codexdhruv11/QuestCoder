{
  "name": "questcoder",
  "version": "1.0.0",
  "description": "A monorepo for tracking coding patterns and platform progress",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c green,cyan \"pnpm --filter @questcoder/backend dev\" \"pnpm --filter @questcoder/frontend dev\"",
    "build": "pnpm --filter @questcoder/backend build && pnpm --filter @questcoder/frontend build",
    "start": "pnpm --filter @questcoder/backend start",
    "lint": "pnpm --filter @questcoder/frontend lint && pnpm --filter @questcoder/backend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter @questcoder/frontend type-check && pnpm --filter @questcoder/backend type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6"
}
