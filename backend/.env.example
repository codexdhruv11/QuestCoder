# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/questcoder
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/questcoder

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# API Keys for Platform Integration
GITHUB_TOKEN=your-github-personal-access-token
LEETCODE_API_KEY=optional-leetcode-api-key
CODEFORCES_API_KEY=optional-codeforces-api-key
HACKERRANK_API_KEY=optional-hackerrank-api-key

# External API URLs
LEETCODE_API_URL=https://leetcode-stats-api.herokuapp.com
CODEFORCES_API_URL=https://codeforces.com/api
GITHUB_API_URL=https://api.github.com
COMPETE_API_URL=https://competeapi.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# CORS_ORIGIN=https://your-frontend-domain.com

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_TTL=3600

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# Gamification Settings
XP_EASY=10
XP_MEDIUM=25
XP_HARD=50
LEVEL_XP_BASE=100

# Analytics Settings
ANALYTICS_CACHE_TTL=300

# Notification Settings
NOTIFICATION_CLEANUP_DAYS=30
